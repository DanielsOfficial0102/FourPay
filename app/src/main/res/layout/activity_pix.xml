<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".activitys.PixActivity">
    <!--  TOPO FIXO  -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:padding="0dp" />

        <ImageView
            android:id="@+id/img_voltar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="32dp"
            android:onClick="voltar"
            android:contentDescription="@string/cd_botao_voltar"
            android:src="@drawable/ic_voltar" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/pix"
            android:textColor="@color/cinza"
            android:textSize="26sp" />
    </LinearLayout>
    <!--  FIM DO TOPO FIXO  -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTextoPix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/texto_ainda_nao_tem_chave"
                android:textAlignment="center"
                android:textColor="@color/cinza"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvGerarChave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/gerar_chave"
                android:textAlignment="center"
                android:textColor="@color/azul_claro"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/azul_claro" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/ic_transferir" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="-50dp"
                android:fontFamily="@font/nunito_semi"
                android:text="@string/transferir_pix"
                android:textColor="@color/cinza"
                android:textSize="20sp" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="abrirTransferenciaPix"
                android:layout_marginLeft="360dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/ic_seta_direita" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="-14dp"
                android:fontFamily="@font/nunito_semi"
                android:text="@string/info_pix"
                android:textColor="@color/cinza"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/azul_claro" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/ic_chave" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="-50dp"
                android:fontFamily="@font/nunito_semi"
                android:text="@string/minhas_chaves"
                android:textColor="@color/cinza"
                android:textSize="20sp" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="abrirMinhasChaves"
                android:layout_marginLeft="360dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/ic_seta_direita" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="-14dp"
                android:fontFamily="@font/nunito_semi"
                android:text="@string/info_chaves_pix"
                android:textColor="@color/cinza"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/azul_claro" />

            <TextView
                android:id="@+id/tvTextoEmBreve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/em_breve"
                android:textAlignment="center"
                android:textColor="@color/cinza"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/cinza" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/ic_qrcode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="-50dp"
                android:fontFamily="@font/nunito_semi"
                android:text="@string/pagar_qr_code"
                android:textColor="@color/cinza"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_semi"
                android:text="@string/info_pagar_qr_code"
                android:textColor="@color/cinza"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/cinza" />

            <ImageView
                android:layout_width="34dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/img_cobrar_alguem" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="-50dp"
                android:fontFamily="@font/nunito_semi"
                android:text="@string/cobrar_alguem"
                android:textColor="@color/cinza"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_semi"
                android:text="@string/info_cobrar_alguem"
                android:textColor="@color/cinza"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/cinza" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:alpha="0.7"
                android:background="@drawable/ic_pix_copia_cola" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="-50dp"
                android:fontFamily="@font/nunito_semi"
                android:text="@string/pix_copia_cola"
                android:textColor="@color/cinza"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_semi"
                android:text="@string/info_pix_copia_cola"
                android:textColor="@color/cinza"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/cinza" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/four"
                    android:textColor="@color/azul_claro"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/tvPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/pay"
                    android:textColor="@color/cinza"
                    android:textSize="26sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>