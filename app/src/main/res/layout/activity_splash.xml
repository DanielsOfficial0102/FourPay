<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/outro_branco"
    tools:context=".activitys.SplashActivity">

    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="center"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:text="four"
        android:textColor="@color/azul_claro"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@id/txt_nome"
        app:layout_constraintStart_toStartOf="@id/logo_img"
        app:layout_constraintTop_toBottomOf="@id/logo_img" />

    <TextView
        android:id="@+id/txt_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:text="pay"
        android:textColor="@color/cinza"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@id/logo_img"
        app:layout_constraintStart_toEndOf="@id/text1"
        app:layout_constraintTop_toTopOf="@id/text1" />

</androidx.constraintlayout.widget.ConstraintLayout>