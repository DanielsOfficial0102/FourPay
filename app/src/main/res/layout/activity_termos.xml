<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.TermosActivity">

    <ImageView
        android:id="@+id/seta_esquerda"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_seta_esquerda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/nunito_semi"
        android:text="@string/termos_condicoes"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/seta_esquerda"
        app:layout_constraintStart_toEndOf="@id/seta_esquerda"
        app:layout_constraintTop_toTopOf="@id/seta_esquerda" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/seta_esquerda">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loren"
            android:paddingBottom="8dp"
            android:textSize="20sp" />
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>